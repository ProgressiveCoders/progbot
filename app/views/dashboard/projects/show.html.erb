
<h1><%= resource.name %></h1>

<% if !resource.leads.include?(current_user)%>
  <% if resource.volunteers.include?(current_user)%>
    <%= link_to "Manage your Volunteering", edit_dashboard_volunteering_path(Volunteering.get_volunteering_id(project = resource, user = current_user))  %>
  <% else %>
    <%= link_to "Volunteer for this Project", new_dashboard_volunteering_path(:project_id => resource.id) %>
  <% end %>
<% end %>

<p><b>Status:</b></p>
<ul>
  <% resource.status.each do |status|%>
    <li><%= status %></li>
  <% end %>
</ul>

<p><b>Description:</b></p>
<p><%= resource.description %></p>

<% if resource.slack_channel.present? %>
  <% if resource.slack_channel_id.present? %>
    <% channel = resource.slack_channel_id %>
  <% else %>
    <% channel = resource._channel %>
  <% end %>
  <p><b>Slack Channel:slack</b></p>
  <p><%= link_to "##{resource.slack_channel}", "slack://channel?team=T1KR8AG7J&id=#{channel}" %></p>
<% end %>


<% contributor_attributes(resource).each do |key, values| %>
  <% if values.present? %>
    <p><b><%= key.humanize %></b></p>
    <ul>
    <% values.each do |value| %>

      <li><%= link_to value.name, 'slack://user?team=T1KR8AG7J&id=' + value.slack_userid %></li>
      
    <% end %>
    </ul>
  <% end %>
<% end %>

<p><b>Tech Stack:</b></p>
  <ul>
    <% resource.tech_stack.each do |skill| %>
      <li><%= link_to skill.name, [:dashboard, skill] %></li>
    <% end %>
  </ul>

<p><b>Non-Tech Stack:</b></p>
  <ul>
    <% resource.non_tech_stack.each do |skill| %>
      <li><%= link_to skill.name, [:dashboard, skill] %></li>
    <% end %>
  </ul>

<p><b>Needs Categories:</b></p>
  <ul>
    <% resource.needs_categories.each do |skill| %>
      <li><%= link_to skill.name, [:dashboard, skill] %></li>
    <% end %>
  </ul>


<% scrubbed_attributes(resource).each do |key, value| %>
  <% if value.present? %>
    <p><b><%= key.humanize %></b></p>
    
    <% if key.include?('url') || key.include?('link') || key == 'working_doc' || key == 'website' || key == 'repository' || key == 'attachments' %>
      <p><%= link_to value, value %></p>
    <% else %>
      <p><%= value %></p>
    <% end %>
  <% end %>
<% end %>
